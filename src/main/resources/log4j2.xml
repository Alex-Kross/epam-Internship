<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO" name="test">
    <Appenders>
        <Console name="ConsoleAppender" target="SYSTEM_OUT">
            <PatternLayout pattern="%d %p %m %n"/>
        </Console>
        <RollingFile
                name="rollingFile"
                fileName="logs/log4j2.log"
                filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
            <PatternLayout>
                <Pattern>%l %d{yyyy-MM-dd HH:mm:ss} %p [%t] %m%n</Pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10MB" />
            </Policies>
            <DefaultRolloverStrategy max="5" />
        </RollingFile>
    </Appenders>

    <Loggers>
        <Logger name="com.epam.jwd.task2" level="WARN" additivity="false">
            <AppenderRef ref="rollingFile"/>
        </Logger>
        <Root level="INFO">
            <AppenderRef ref="ConsoleAppender"/>
        </Root>
    </Loggers>

</Configuration>